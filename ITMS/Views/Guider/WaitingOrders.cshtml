@model IEnumerable<tblTourRegisteration>

<div class="card-body">
    <div id="v-card" class="row justify-content-center" style="margin-top: 44px;">
        <div class="col-md-7 ">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Toursit Name</th>
                        <th>Place Name</th>
                        <th>Action</th>

                    </tr>
                </thead>
                <tbody>
                    @{ var i = 1;
                        foreach (var item in Model)
                        {

                            <tr>
                                <td>@i </td>
                                <td>@item.User.Name</td>
                                <td>@item.Tour.Places.Name</td>
                                <td>
                                    @if (item.RegStatusId == 1)
                                    {
                                        <a asp-controller="Guider" class="btn btn-outline-success" asp-action="ApproveOrder" asp-route-id="@item.GuId">Appeove</a>
                                        <a asp-controller="Guider" class="btn btn-outline-danger" asp-action="DenyOrder" asp-route-id="@item.GuId">Deny</a>
                                    }
                                    else
                                    {
                                        <a asp-controller="Guider" class="btn btn-outline-warning" asp-action="CancelOrder" asp-route-id="@item.GuId">Cancel</a>
                                        <a asp-controller="Guider" class="btn btn-outline-primary" asp-action="CompleteOrder" asp-route-id="@item.GuId">Complete</a>
                                    
                                    }
                                </td>
                            </tr>
                            i++;
                        } }
                </tbody>
            </table>
        </div>
    </div>
</div>