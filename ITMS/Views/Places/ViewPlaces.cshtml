<div class="container">
        <div class="card-body">
            <div class=" o-hidden shadow-lg" style="margin-top: 44px; margin-bottom: 44px">
                <div >

                    @{
                        if (ViewData["Places"] == null)
                        {
                            <h2 class="mx-auto">Sorry, there is no places</h2>
                        }
                        else
                        {
                            IEnumerable<tblPlaces> Places = ViewData["Places"] as IEnumerable<tblPlaces>;
                            var i = 1;
                            foreach (var item in Places)
                            {
                        <div class="row ">
                    <div class="col-md-6 rounded mx-auto card ">
                        <img src="@("~/Images/"+item.ImgName)" asp-append-version="true" style="margin: 25px 25px 25px 25px " width="250px" height="250px">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">@item.Category.CategoryName</p>
                            <a class="btn btn-outline-info" asp-controller="Places" asp-action="PlaceInfo" asp-route-id="@item.GuId">View </a>
                        </div>
                    </div>
                </div>
                    i++;
                
                            }
                        }
                    }
                </div>
            </div>
        </div>
    </div>