@model tblUsers
<script src="~/js/Validation.js"></script>
<div id="v-card" class="d-flex justify-content-center" style="margin-top: 100px;">
    <div class="col-md-4">
        <div class="card ">
            <div class="card-header">
                <h3>Sign Up</h3>
            </div>
            <div class="card-body" >
                <form asp-action="SignUp" id="form">
                    <div class="row">
                        <div class="col-md-6">
                            <label class="col-form-label">Full Name</label>
                            <input type="text" asp-for="Name" class="form-control">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label class="col-form-label">Email</label>
                            <input type="email" asp-for="Email" class="form-control">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label class="col-form-label">Password</label>
                            <input type="password" asp-for="Password" class="form-control">
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-6">
                            <label class="col-form-label">Phone No.</label>
                            <input type="text" asp-for="Phone" class="form-control">
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-12 " style="text-align: left;">
                            <button type="submit" class="btn btn-dark btn-search" onclick="return Valdation()"> Sign Up </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
