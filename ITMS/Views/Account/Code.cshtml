<body>
    <div class="container">
        <div id="v-card" class="row justify-content-center" style="margin-top: 124px;">
            <div class="card o-hidden border-0 shadow-lg my-5 col-xl-7 col-lg-7 col-md-7">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-md-2"></div>
                        <div class="col-md-8">
                            <div class="p-5">
                                <h1 class="text-center h4 text-gray-900 mb-4" style="font-size: 120%;">Email Verification</h1>
                                <form asp-action="Code">
                                    <div id="verification-form-group" class="form-group">
                                        <h1 class="text-center h4 text-gray-600 mb-4" style="font-size: 12px;">enter the code sent to your KFU email</h1>
                                        <input name="codeInput" id="code" type="number" class="text-center form-control" placeholder="XXXXXX">
                                        <input name="guid" hidden readonly value=@ViewData["GuId"] />
                                        <input name="page" hidden readonly value=@ViewData["Page"] />
                                        <input name="code" hidden readonly value=@ViewData["code"] />
                                        <button type="submit" class="btn btn-primary">Verify</button>
                                        <h1 id="errormsg" hidden class="text-center h4 " style="font-size: 12px; color: red">incorrect enter the code  again </h1>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
